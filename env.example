# Production Environment Variables
# Copy this to .env and fill in your values

# Required for production
SECRET_KEY=your-super-secure-secret-key-here-change-this
FLASK_CONFIG=production

# Database Configuration (choose one)
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/super_tictactoe

# MySQL alternative
# DATABASE_URL=mysql://username:password@localhost:3306/super_tictactoe

# SQLite (not recommended for production)
# DATABASE_URL=sqlite:///super_tictactoe.db

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
